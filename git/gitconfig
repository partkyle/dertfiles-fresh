[include]
	path = ~/.gitconfig.local

[init]
	templatedir = ~/.git_template

[core]
	excludesfile = ~/.gitignore

[user]
	name = Kyle Partridge
	email = partkyle@gmail.com

[diff]
	algorithm = patience

[color]
	ui = auto

[merge]
	tool = vimdiff
	defaultToUpstream = true

[push]
	default = matching
[branch]
	autosetuprebase = always

[format]
	pretty=format:%C(yellow)%h%Creset -%C(bold blue)%d%Creset %s %Cgreen(%ar) %C(magenta)<%an>%Creset

[alias]
	st = status
	ss = status --short
	ci = commit
	co = checkout
	d  = diff
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git --no-pager l -20
	ra = !git r --all
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	l = log --graph --abbrev-commit --date=relative
	la = !git l --all
	div = divergence
	gn = goodness
	gnc = goodness --cached
	fa = fetch --all
	pom = push origin master
	b = branch
	undo = !git add . && git reset --hard
	pu = push upstream
	po = push origin
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	last-tag = "!git log $(git tag | tail -1) ^$(git tag | tail -2 | head -1) --oneline"
	release = "!git last-tag | grep 'Merge pull request' | grep -i NEWS | sed 's|.*sendgrid/.*\\(NEWS-\\d*\\)|\\1|'"

	snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"

	# git gui
	k = "!gitx || gitk"
