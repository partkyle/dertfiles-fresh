[include]
	path = .gitconfig.local
[user]
	name = Kyle Partridge
	email = partkyle@gmail.com
[diff]
[color]
	ui = auto
[alias]
	st = status
	ss = status --short
	ci = commit
	co = checkout
	d  = diff
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git --no-pager l -20
	ra = !git r --all
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	l = log --graph --abbrev-commit --date=relative
	la = !git l --all
	div = divergence
	gn = goodness
	gnc = goodness --cached
	fa = fetch --all
	pom = push origin master
	b = branch
	undo = !git add . && git reset --hard
	pu = push upstream
	po = push origin
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate

[format]
	pretty=format:%C(yellow)%h%Creset -%C(bold blue)%d%Creset %s %Cgreen(%ar) %C(magenta)<%an>%Creset

[merge]
	tool = vimdiff
	defaultToUpstream = true
[push]
	default = matching
[core]
	excludesfile = /Users/partkyle/.gitignore
